<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5">
  <servlet>
    <servlet-name>TaskList</servlet-name>
    <servlet-class>org.ntx.mothership.webapp.TaskListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskList</servlet-name>
    <url-pattern>/list/tasks/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Task</servlet-name>
    <servlet-class>org.ntx.mothership.webapp.TaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Task</servlet-name>
    <url-pattern>/run/task/*</url-pattern>
  </servlet-mapping>
</web-app>
